# =============================================================================
# HR Application - Frontend Environment Variables
# =============================================================================
# This file serves as a template for environment-specific configuration.
# Copy this file to .env.local and update values for your environment.
#
# IMPORTANT: Never commit .env.local or any file containing actual secrets
# to version control. This template should only contain example values.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Base URL for the backend API
# Development: http://localhost:3000/api
# Staging: https://staging-api.example.com/api
# Production: https://api.example.com/api
VITE_API_BASE_URL=http://localhost:3000/api

# API request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# Enable API request/response logging in development (default: false)
VITE_API_DEBUG=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable dashboard features
# Set to 'false' to disable all dashboard functionality (kill switch)
# Default: true
VITE_DASHBOARD_ENABLED=true

# Enable/disable specific dashboard modules
VITE_FEATURE_ONBOARDING=true
VITE_FEATURE_APPRAISALS=true
VITE_FEATURE_LEAVE_MANAGEMENT=true
VITE_FEATURE_EMPLOYEE_DIRECTORY=true

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Token storage location: 'localStorage' or 'sessionStorage'
# localStorage: Persists across browser sessions
# sessionStorage: Cleared when browser tab is closed
VITE_AUTH_STORAGE=localStorage

# Access token expiration time in seconds (default: 900 = 15 minutes)
VITE_AUTH_TOKEN_EXPIRY=900

# Refresh token expiration time in seconds (default: 604800 = 7 days)
VITE_AUTH_REFRESH_EXPIRY=604800

# Enable automatic token refresh (default: true)
VITE_AUTH_AUTO_REFRESH=true

# Redirect path after successful login (default: /dashboard)
VITE_AUTH_LOGIN_REDIRECT=/dashboard

# Redirect path after logout (default: /login)
VITE_AUTH_LOGOUT_REDIRECT=/login

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application environment: 'development', 'staging', or 'production'
VITE_APP_ENV=development

# Application name displayed in UI
VITE_APP_NAME=HR Management System

# Application version (automatically set during build)
VITE_APP_VERSION=1.0.0

# Enable debug mode for additional logging and developer tools
# WARNING: Never enable in production
VITE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# UI/UX Configuration
# -----------------------------------------------------------------------------
# Default theme: 'light' or 'dark'
VITE_DEFAULT_THEME=light

# Enable theme switching (default: true)
VITE_THEME_SWITCHING_ENABLED=true

# Default language/locale (default: en-US)
VITE_DEFAULT_LOCALE=en-US

# Enable internationalization (i18n) support
VITE_I18N_ENABLED=false

# Items per page for paginated lists (default: 10)
VITE_PAGINATION_PAGE_SIZE=10

# Enable animations (default: true)
VITE_ANIMATIONS_ENABLED=true

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------
# Enable service worker for offline support (default: false)
VITE_SERVICE_WORKER_ENABLED=false

# Enable code splitting for route-based lazy loading (default: true)
VITE_CODE_SPLITTING=true

# Maximum file upload size in bytes (default: 5242880 = 5MB)
VITE_MAX_UPLOAD_SIZE=5242880

# Allowed file types for uploads (comma-separated MIME types)
VITE_ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/gif,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
# Enable error tracking (default: false)
VITE_ERROR_TRACKING_ENABLED=false

# Error tracking service DSN (e.g., Sentry DSN)
# VITE_ERROR_TRACKING_DSN=

# Enable analytics (default: false)
VITE_ANALYTICS_ENABLED=false

# Analytics tracking ID (e.g., Google Analytics)
# VITE_ANALYTICS_ID=

# Enable performance monitoring (default: false)
VITE_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Enable Content Security Policy (CSP) headers (default: true)
VITE_CSP_ENABLED=true

# Enable HTTPS-only mode in production (default: true)
VITE_HTTPS_ONLY=true

# Session timeout in seconds (default: 3600 = 1 hour)
VITE_SESSION_TIMEOUT=3600

# Enable session timeout warning (default: true)
VITE_SESSION_TIMEOUT_WARNING=true

# Session timeout warning threshold in seconds (default: 300 = 5 minutes)
VITE_SESSION_TIMEOUT_WARNING_THRESHOLD=300

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable React DevTools in production (default: false)
# WARNING: Never enable in production
VITE_REACT_DEVTOOLS=false

# Enable Redux DevTools in production (default: false)
# WARNING: Never enable in production
VITE_REDUX_DEVTOOLS=false

# Enable source maps in production (default: false)
VITE_SOURCE_MAPS=false

# Enable hot module replacement (HMR) (default: true in development)
VITE_HMR=true

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------
# Enable mock service worker for API mocking in development (default: true)
VITE_MSW_ENABLED=true

# Mock API delay in milliseconds (default: 500)
VITE_MSW_DELAY=500

# -----------------------------------------------------------------------------
# Accessibility
# -----------------------------------------------------------------------------
# Enable accessibility features (default: true)
VITE_A11Y_ENABLED=true

# Enable keyboard navigation hints (default: true)
VITE_A11Y_KEYBOARD_HINTS=true

# Enable screen reader announcements (default: true)
VITE_A11Y_SCREEN_READER=true

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. All environment variables must be prefixed with VITE_ to be exposed
#    to the client-side code
# 2. Boolean values should be strings: 'true' or 'false'
# 3. Numeric values should be strings and parsed in the application
# 4. Never store sensitive data (API keys, secrets) in environment variables
#    that are exposed to the client
# 5. Use different .env files for different environments:
#    - .env.local (local development, gitignored)
#    - .env.development (development defaults, committed)
#    - .env.staging (staging configuration, committed)
#    - .env.production (production configuration, committed)
# =============================================================================